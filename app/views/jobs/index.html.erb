<h1 class="title">Open Jobs</h1>

<% @jobs.each do |job| %>
	<div class="container">

	  <h3><%= job.title %></h3>
	  <p>Company: <%= job.company %></p>
	  <p>Location: <%= job.location %></p>
	  <p><%= job.description %></p>
	  <div class="optionsContainer">
	  	<button class="options"><%= link_to "View", job_path(job)%></button>
	  </div>
	 
	</div>
<% end %>
